
<div class="row">
  <div class="col-md-6">
    <%= image_tag(@idea.picture_url, width: '100%') if @idea.picture.present? %>
  </div>

  <div class="col-md-5">
    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea) %> |
      <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <%= link_to 'Back', ideas_path %>
    </p>

    <h3>Comments</h3>
    <% @comments.each do |comment| %>
      <div style="border: 1px solid #DDD; margin-bottom: 8px; padding: 5px; padding-bottom: 0;">
        <div style="border-bottom: 1px solid #DDD;"><span>User Name : </span><strong><%= comment.user_name %></strong></div>
        <p><%= comment.body %></p>
        <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: '削除してもよろしいですか？' },class: "btn btn-primary btn-sm" %></p>
      </div>
    <% end %>
    <%= render 'comments/form' %>
  </div>
</div>
